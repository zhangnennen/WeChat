/* pages/face/face.wxss */
page {
  height: 100%;
  background-color: white;
}

.zm-view {

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 


@keyframes animX {
  0% {
    left: -10rpx;
  }

  100% {
    left: 390rpx;
  }
}

@keyframes animY {
  0% {
    top: -10rpx;
  }

  100% {
    top: 390rpx;
  }
}

.ball {

  width: 10px;
  height: 10px;
  background-color: #f66;
  border-radius: 50%;
  position: absolute;
  z-index: 2;
  animation: animX 4s cubic-bezier(0.36, 0, 0.64, 1) -2s infinite alternate, animY 4s cubic-bezier(0.36, 0, 0.64, 1) 0s infinite alternate;
}


.lopp {
  margin-top: 200rpx;
  width: 198px;
  height: 198px;
  background: gray;
  border-radius: 50%;
  position: relative;
}
.camera{
  width: 200px;
  height: 200px;
  background: gray;
  border-radius: 50%;
  z-index: 1;
}
.btn-view {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;

}

.btn-pad .van-button--primary {
  width: 400rpx;
  margin-top: 30rpx;
  padding: 0 120rpx;
  background-color: #008CBA;
  font-size: 16px;
  border-radius: 8px;
}