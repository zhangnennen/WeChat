.v-cent::after {
  position: absolute;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  content: " ";
  pointer-events: none;
  top: auto;
  right: 0;
  bottom: 0;
  left: 16px;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}


.v-checkbox .van-checkbox,.v-checkbox .van-checkbox__icon{
  font-size: 12px !important;
}



.next{
  text-align: center;
  padding: 20rpx  0;
  display: flex;
