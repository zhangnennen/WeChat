
@import "../../../common/css/main.wxss";

page{
  height: 100%;
}
.contain{
  height: 100%;
  display:flex;
  flex-direction:column;
  padding:10rpx 20rpx;
}

.content .title{
  border-bottom: 4rpx #aaa solid;
  text-align: center;
  font-size: 60rpx;
  padding: 10rpx 0;
}

.v-cent {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.v-cent .v-cent-label{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.v-cent .v-cent-pels{
  padding: 10px 16px;
}
.v-cent .v-cent-label .label {
  position: relative;
  max-width: 90px;
  min-width: 65px;
  padding: 10px 16px;
}

